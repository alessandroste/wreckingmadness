{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Game (Android) - CMAKE Configure",
      "type": "shell",
      "command": "C:\\msys64\\mingw64\\bin\\cmake.exe",
      "args": [
        "--toolchain",
        "C:\\Program Files (x86)\\Android\\android-sdk\\ndk-bundle\\build\\cmake\\android.toolchain.cmake",
        "-DANDROID_ABI=x86",
        "-DANDROID_PLATFORM=android-16",
        "-B",
        "proj.android/build"
      ]
    },
    {
      "label": "Game (Android) - Build",
      "type": "shell",
      "command": ".\\gradlew",
      "options": {
        "cwd": "proj.android"
      },
      "args": [
        "bundle"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "Game (Android) - Install",
      "type": "shell",
      "command": ".\\gradlew",
      "options": {
        "cwd": "proj.android"
      },
      "args": [
        "installDebug"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "Game (Android) - Start emulator",
      "type": "process",
      "isBackground": true,
      "command": "emulator.exe",
      "options": {
        "cwd": "${env:ANDROID_SDK_ROOT}/emulator"
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "clear": true
      },
      "args": [
        "-avd",
        "Android_Emulator_31",
        "-gpu",
        "on"
      ],
      "problemMatcher": []
    },
    {
      "label": "Game (Windows) - Run",
      "type": "process",
      "command": "wreckingmadness.exe",
      "options": {
        "cwd": "${workspaceFolder}\\proj.win32\\build\\bin\\wreckingmadness\\Debug"
      },
      "problemMatcher": [],
      "dependsOn": [
        "Game (Windows) - Build"
      ]
    },
    {
      "label": "Game (Windows) - Build",
      "type": "shell",
      "command": "C:\\msys64\\mingw64\\bin\\cmake",
      "args": [
        "--build",
        "${workspaceFolder}\\proj.win32\\build"
      ],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "Game (Android) - Forward debug ports",
      "type": "shell",
      "command": "adb",
      "args": [
        "forward",
        "tcp:5039",
        "tcp:5039"
      ],
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": []
    },
    {
      "label": "Server - Deploy infrastructure",
      "type": "shell",
      "windows": {
        "command": "New-AzResourceGroupDeployment -Name VSCodeDeployment -ResourceGroupName wreckingmadness -Mode Incremental -TemplateParameterFile ./server/functions/.arm/deployment.parameters.json -TemplateFile ./server/functions/.arm/deployment.json"
      },
      "problemMatcher": []
    },
    {
      "label": "Functions - Clean",
      "command": "dotnet",
      "options": {
        "cwd": "${workspaceFolder}\\server\\functions"
      },
      "args": [
        "clean",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Functions - Build",
      "command": "dotnet",
      "options": {
        "cwd": "${workspaceFolder}\\server\\functions"
      },
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Functions - Clean (Release)",
      "command": "dotnet",
      "options": {
        "cwd": "${workspaceFolder}\\server\\functions"
      },
      "args": [
        "clean",
        "--configuration",
        "Release",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Functions - Publish",
      "command": "dotnet",
      "options": {
        "cwd": "${workspaceFolder}\\server\\functions"
      },
      "args": [
        "publish",
        "--configuration",
        "Release",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "problemMatcher": "$msCompile"
    },
    {
      "type": "func",
      "dependsOn": "Functions - Build",
      "options": {
        "cwd": "${workspaceFolder}\\server\\functions\\bin\\Debug\\net6.0"
      },
      "command": "host start",
      "isBackground": true,
      "problemMatcher": "$func-dotnet-watch"
    }
  ]
}
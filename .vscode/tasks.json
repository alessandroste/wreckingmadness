{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure Android",
      "type": "shell",
      "command": "C:\\msys64\\mingw64\\bin\\cmake.exe",
      "args": [
        "--toolchain",
        "C:\\Program Files (x86)\\Android\\android-sdk\\ndk-bundle\\build\\cmake\\android.toolchain.cmake",
        "-DANDROID_ABI=x86",
        "-DANDROID_PLATFORM=android-16",
        "-B",
        "proj.android/build"
      ]
    },
    {
      "label": "Build Android",
      "type": "shell",
      "command": ".\\gradlew",
      "options": {
        "cwd": "proj.android"
      },
      "args": [
        "bundle"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "Install Android",
      "type": "shell",
      "command": ".\\gradlew",
      "options": {
        "cwd": "proj.android"
      },
      "args": [
        "installDebug"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "Emulator",
      "type": "process",
      "isBackground": true,
      "command": "emulator.exe",
      "options": {
        "cwd": "${env:ANDROID_SDK_ROOT}/emulator"
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "clear": true
      },
      "args": [
        "-avd",
        "Android_Emulator_31",
        "-gpu",
        "on"
      ],
      "problemMatcher": []
    },
    {
      "label": "Run game (Windows)",
      "type": "process",
      "command": "wreckingmadness.exe",
      "options": {
        "cwd": "${workspaceFolder}\\proj.win32\\build\\bin\\wreckingmadness\\Debug"
      },
      "problemMatcher": [],
      "dependsOn": [
        "Build (Windows)"
      ]
    },
    {
      "label": "Build (Windows)",
      "type": "shell",
      "command": "C:\\msys64\\mingw64\\bin\\cmake",
      "args": [
        "--build",
        "${workspaceFolder}\\proj.win32\\build"
      ],
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "Forward debug port",
      "type": "shell",
      "command": "adb",
      "args": [
        "forward",
        "tcp:5039",
        "tcp:5039"
      ],
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": []
    },
    {
      "label": "Clean (functions)",
      "command": "dotnet",
      "options": {
        "cwd": "${workspaceFolder}/server/functions"
      },
      "args": [
        "clean",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build (functions)",
      "command": "dotnet",
      "options": {
        "cwd": "${workspaceFolder}/server/functions"
      },
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "dependsOn": "clean (functions)",
      "group": {
        "kind": "build"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Clean release (functions)",
      "command": "dotnet",
      "options": {
        "cwd": "${workspaceFolder}/server/functions"
      },
      "args": [
        "clean",
        "--configuration",
        "Release",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Publish (functions)",
      "command": "dotnet",
      "options": {
        "cwd": "${workspaceFolder}/server/functions"
      },
      "args": [
        "publish",
        "--configuration",
        "Release",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "type": "process",
      "dependsOn": "clean release (functions)",
      "problemMatcher": "$msCompile"
    },
    {
      "type": "func",
      "dependsOn": "Build (functions)",
      "options": {
        "cwd": "${workspaceFolder}/server/functions/bin/Debug/net6.0"
      },
      "command": "host start",
      "isBackground": true,
      "problemMatcher": "$func-dotnet-watch"
    }
  ]
}
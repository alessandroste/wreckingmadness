{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure Android",
      "type": "shell",
      "command": "C:\\msys64\\mingw64\\bin\\cmake.exe",
      "args": [
        "--toolchain",
        "C:\\Program Files (x86)\\Android\\android-sdk\\ndk-bundle\\build\\cmake\\android.toolchain.cmake",
        "-DANDROID_ABI=x86",
        "-DANDROID_PLATFORM=android-16",
        "-B",
        "proj.android/build"
      ]
    },
    {
      "label": "Build Android",
      "type": "shell",
      "command": ".\\gradlew",
      "options": {
        "cwd": "proj.android"
      },
      "args": [
        "bundle"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "Install Android",
      "type": "shell",
      "command": ".\\gradlew",
      "options": {
        "cwd": "proj.android"
      },
      "args": [
        "installDebug"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "Emulator",
      "type": "process",
      "isBackground": true,
      "command": "emulator.exe",
      "options": {
        "cwd": "${env:ANDROID_SDK_ROOT}/emulator"
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "clear": true
      },
      "args": [
        "-avd",
        "Android_Emulator_31",
        "-gpu",
        "on"
      ],
      "problemMatcher": []
    },
    {
      "label": "Run game (Windows)",
      "type": "process",
      "command": "wreckingmadness.exe",
      "options": {
        "cwd": "${workspaceFolder}\\proj.win32\\build\\bin\\wreckingmadness\\Debug"
      },
      "problemMatcher": [],
      "dependsOn": [
        "Build (Windows)"
      ]
    },
    {
      "label": "Build (Windows)",
      "type": "shell",
      "command": "C:\\msys64\\mingw64\\bin\\cmake",
      "args": [
        "--build",
        "${workspaceFolder}\\proj.win32\\build"
      ],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "Forward debug port",
      "type": "shell",
      "command": "adb",
      "args": [
        "forward",
        "tcp:5039",
        "tcp:5039"
      ],
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Deploy server resources",
      "windows": {
        "command": "New-AzResourceGroupDeployment -Name VSCodeDeployment -ResourceGroupName wreckingmadness -Mode Incremental -TemplateParameterFile ./server/functions/.arm/deployment.parameters.json -TemplateFile ./server/functions/.arm/deployment.json"
      },
      "problemMatcher": []
    }
  ]
}
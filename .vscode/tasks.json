{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure Android",
      "type": "shell",
      "command": "C:\\msys64\\mingw64\\bin\\cmake.exe",
      "args": [
        "--toolchain",
        "C:\\Program Files (x86)\\Android\\android-sdk\\ndk-bundle\\build\\cmake\\android.toolchain.cmake",
        "-DANDROID_ABI=x86",
        "-DANDROID_PLATFORM=android-16",
        "-B",
        "proj.android/build"
      ]
    },
    {
      "label": "Build Android",
      "type": "shell",
      "command": ".\\gradlew",
      "options": {
        "cwd": "proj.android"
      },
      "args": [
        "bundle"
      ]
    },
    {
      "label": "Emulator",
      "type": "process",
      "isBackground": true,
      "command": "emulator.exe",
      "options": {
        "cwd": "${env:ANDROID_SDK_ROOT}/emulator"
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "clear": true
      },
      "args": [
        "-avd",
        "Android_Emulator_31",
        "-gpu",
        "on"
      ],
      "problemMatcher": []
    }
  ]
}